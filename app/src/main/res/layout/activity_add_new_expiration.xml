<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kimia.tomer.expirationdatereminders.AddNewExpirationActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
       >

        <TextView
            android:id="@+id/textview_add_activity_log_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edittext_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Item Name"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:maxLines="1" />

        <DatePicker
            android:id="@+id/datepicker_item_expiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/button_add_written_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_item" />

    </LinearLayout>
</ScrollView>
